#: import FadeTransition kivy.uix.screenmanager.FadeTransition
# File name simplekivy.kv

ScreenManagement:
    transition: FadeTransition()
    MainMenu:
        text: "Main Menu"
    LoginScreen:
        text: "Login Screen"
    QuitScreen:
        text:"Quit"

<Button>:
    color: 0,1,0,1
    font_size: 25
    size_hint: 0.2,0.15

<MainMenu>:
    name: "main"
    Button:
        on_release: app.root.current = "login"
        text: "Login Screen"
        pos_hint: {"left":1,"top":1}

    Button:
        on_press: app.root.current = "quit"
        text: "Quit"
        pos_hint: {"right":1,"top":1}

<LoginScreen>:
    name: "login"
    FloatLayout:
        Button:
            on_press: app.root.current = "main"
            text: "Main Menu"
            pos_hint: {"left":1,"top":1}
        Button:
            on_press: app.root.current = "main"
            text: "Login"
            pos_hint:

<QuitScreen>:
    name: "quit"
    FloatLayout:
        Label:
            text:"Are you sure you want to quit?"
        Button:
            text: "Yes"
            pos_hint: {"left":1,"bottom":1}
            on_press:
        Button:
            text: "No"
            pos_hint: {"right":1,"bottom":1}
            on_press: app.root.current = "main"
